---
interface Props {
  title?: string;
  href: string;
  buttonText: string;
  description?: string;
}

const { title, href, buttonText, description } = Astro.props;
---

<a
  href={href}
  class="group flex flex-col gap-3 text-center border-l-3 border-cyan px-4 py-6 bg-neon-dark transition-all hover:bg-neon-light hover:shadow-sm"
>
  {title && <div class="text-cyan font-bold text-md">{title}</div>}
  <div class="flex justify-center">
    <div
      class="px-8 py-2 text-cyan group-hover:text-white bg-neon-medium group-hover:bg-neon-glow border-cyan border-1 transition-all"
    >
      {buttonText}
    </div>
  </div>
  {description && <p>{description}</p>}
</a>
